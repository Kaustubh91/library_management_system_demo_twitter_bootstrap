<%= form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :book_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :book_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :book_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :book_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :book_genre, :class => 'control-label' %>
    <div class="controls">
      <% if @button == "create"%>
      <% @current_book_genre = @temp %>
      <% else %>
      <% @current_book_genre = @book.book_genre %>
      <% end %>
      <%= f.text_field :book_genre,:value => @current_book_genre, :class => 'text_field', :readonly => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :book_review, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :book_review, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path(:book_genre => @current_book_genre), :class => 'btn' %>
  </div>
<% end %>
