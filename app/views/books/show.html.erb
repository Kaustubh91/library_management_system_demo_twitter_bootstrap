<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:book_name) %>:</strong></dt>
  <dd><%= @book.book_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:book_id) %>:</strong></dt>
  <dd><%= @book.book_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:book_genre) %>:</strong></dt>
  <dd><%= @book.book_genre %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:book_review) %>:</strong></dt>
  <dd><%= @book.book_review %></dd>
</dl>
<% @current_book_genre = @book.book_genre %>
<% @current_book_id = @book.id %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path(:book_genre => @current_book_genre), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
